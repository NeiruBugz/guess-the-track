{
  "env": {
    "es6": true,
    "node": false,
    "browser": true,
    "jest": true
  },
  "extends": ["plugin:@typescript-eslint/eslint-recommended", "react-app"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error"
  }
}
